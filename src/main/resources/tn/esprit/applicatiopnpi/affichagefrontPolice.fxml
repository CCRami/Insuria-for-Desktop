<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox fx:id="mainContainer" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.applicatiopnpi.controllers.AffichagefrontPolice" stylesheets="@style/dashboardDesign.css">
    <children>
        <!-- Title and image at the top -->
        <VBox alignment="CENTER" spacing="10">
            <children>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Label text="LIST OF POLICIES" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #051B46; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 3, 0, 2, 4);"/>
                        <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                            <image>
                                <Image url="@images/contract_1018583.png"/> <!-- Verify this path is correct -->
                            </image>
                        </ImageView>
                    </children>
                </HBox>
                <!-- Sinistre filter buttons box -->
                <HBox fx:id="sinistreFilterBox" alignment="CENTER" spacing="10">
                    <!-- Buttons for each Sinistre will be dynamically added here -->
                </HBox>
            </children>
        </VBox>
        <!-- ScrollPane to hold cards in a scrollable VBox -->
        <ScrollPane fitToWidth="true">
            <content>
                <VBox fx:id="cardsContainer" alignment="CENTER_RIGHT" spacing="10">
                    <!-- Cards will be dynamically added here -->
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
