<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;" stylesheets="@tn/esprit/applicatiopnpi/style/dashboardDesign.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.listcommands">
    <children>
        <!-- Title and image at the top -->
        <VBox alignment="CENTER" spacing="10">
            <children>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #051B46; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 3, 0, 2, 4);" text="LIST OF Commands" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <BorderPane style="-fx-padding: 10;" />

        <!-- ScrollPane to hold cards in a scrollable VBox -->
        <ScrollPane fitToWidth="true">
            <content>
                <VBox fx:id="cardsContainer" alignment="CENTER_RIGHT" spacing="10">
                    <!-- Cards will be dynamically added here -->
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
