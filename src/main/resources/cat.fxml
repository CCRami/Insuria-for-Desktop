<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="204.0" prefWidth="214.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.cat">
    <children>
        <VBox fx:id="cat" prefHeight="350.0" prefWidth="300.0" styleClass="card" stylesheets="@tn/esprit/applicatiopnpi/style/dashboardDesign.css">

            <children>
                <Label fx:id="CategoryName" alignment="CENTER" prefHeight="52.0" prefWidth="390.0" styleClass="card__title" text="Crepe Factory">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <VBox prefHeight="257.0" prefWidth="379.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="44.0" prefWidth="379.0">
                            <children>
                            <Label fx:id="Description" prefHeight="44.0" prefWidth="104.0" styleClass="card__description" text="Label" textFill="WHITE">
                           <font>
                              <Font name="Arial Black" size="18.0" />
                           </font></Label>
                            </children>
                        </HBox>


                        <HBox alignment="CENTER" prefHeight="22.0" prefWidth="306.0">
                            <children>
                                <ImageView fx:id="piccatoff" fitHeight="169.0" fitWidth="217.0" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" style="-fx-margin: 20 20 0 0;">
                            <Button onAction="#viewoffers" style="-fx-font-size: 14px; -fx-padding: 5 10;" text="View Offers" />
                        </HBox>


                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
