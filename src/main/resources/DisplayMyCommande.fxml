<AnchorPane prefHeight="778.0" prefWidth="1254.0" style="-fx-background-color: white;" styleClass="right-bar" stylesheets="@style/Commande.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CommandDetails">
    <children>
        <VBox alignment="CENTER" layoutX="438.0" layoutY="152.0" styleClass="rectangle-container" AnchorPane.bottomAnchor="350.0" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="350.0" AnchorPane.topAnchor="350.0">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Commande Details" styleClass="info-container"/>
            <VBox alignment="CENTER" spacing="10" >
                <Label text="Montant:" />
                <Label fx:id="montantLabel" style="-fx-font-size: 16px;" />
            </VBox>
            <VBox alignment="CENTER" spacing="10" >
                <Label text="Date d'Effet:" />
                <Label fx:id="dateEffetLabel" style="-fx-font-size: 16px;" />
            </VBox>
            <VBox alignment="CENTER" spacing="10" >
                <Label text="Date d'Expiration:" />
                <Label fx:id="dateExpLabel" style="-fx-font-size: 16px;" />
            </VBox>
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="DOA Details" />
