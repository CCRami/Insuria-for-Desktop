<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="778.0" prefWidth="1254.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.applicatiopnpi.controllers.AddPolice">
    <children>
        <VBox spacing="10" layoutX="433.0" layoutY="126.0" prefHeight="672.0" prefWidth="808.0" styleClass="white-bg, shadow">
            <children>
                <Label text="Add New Police" />
                <TextField fx:id="txtPoliceName" promptText="Enter police name"/>
                <TextField fx:id="txtDescription" promptText="Enter description"/>
                <ComboBox fx:id="comboSinistre" promptText="Select Sinistre"/>
                <HBox spacing="10.0" alignment="CENTER">
                    <children>
                        <Button text="Save" onAction="#handleSaveAction"/>
                        <!-- Assuming there is a cancel action -->
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
